# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# For local: mongodb://localhost:27017/tvi_database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/tvi_database
MONGODB_URI=mongodb://localhost:27017/tvi_database

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@techvimal.com
ADMIN_PASSWORD=Admin@123

# Frontend URL (for CORS)
# Local: http://localhost:3000
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
